<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/setting"

    tools:context=".StatActivity">

    <Button
        android:id="@+id/buttonDay"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/statistics_buttons"
        android:elevation="10dp"
        android:onClick="backToMain"
        android:stateListAnimator="@null"
        android:text="@string/day_text"
        android:textAllCaps="false"
        android:textColor="@color/TextWithBack"
        android:textSize="30sp"
        android:translationZ="6dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonWeek"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonWeek"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/statistics_buttons"
        android:elevation="10dp"
        android:stateListAnimator="@null"
        android:text="@string/week_text"
        android:textAllCaps="false"
        android:textColor="@color/TextWithBack"
        android:textSize="30sp"
        android:translationZ="6dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonMouth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonDay" />

    <Button
        android:id="@+id/buttonMouth"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/statistics_buttons"
        android:elevation="10dp"
        android:onClick="PieChartMe"
        android:stateListAnimator="@null"
        android:text="@string/mounth_text"
        android:textAllCaps="false"
        android:textColor="@color/TextWithBack"
        android:textSize="30sp"
        android:translationZ="6dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonOutcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonWeek" />

    <Button
        android:id="@+id/buttonOutcome"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/statistics_buttons"
        android:elevation="10dp"
        android:onClick="OutcomeHistoryMe"
        android:stateListAnimator="@null"
        android:text="@string/History_Outcome_text"
        android:textAllCaps="false"
        android:textColor="@color/TextWithBack"
        android:textSize="30sp"
        android:translationZ="6dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonAll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonMouth" />

    <Button
        android:id="@+id/buttonAll"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/statistics_buttons"
        android:elevation="10dp"
        android:onClick="HistoryMe"
        android:stateListAnimator="@null"
        android:text="@string/income_text"
        android:textAllCaps="false"
        android:textColor="@color/TextWithBack"
        android:textSize="30sp"
        android:translationZ="6dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonOutcome" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAll"
        app:srcCompat="@drawable/statistics" />

</androidx.constraintlayout.widget.ConstraintLayout>